{
  "name": "stencil-ui",
  "displayName": "stencil-ui",
  "description": "",
  "version": "1.0.0",
  "publisher": "WoodenHands",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "stencil-ui.createUIDirectory",
        "title": "New UI Directory..."
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "stencil-ui.createUIDirectory",
          "group": "navigation@8",
          "when": "explorerResourceIsFolder"
        }
      ]
    },
    "configuration": {
      "title": "Stencil",
      "properties": {
        "stencil.useTypescript": {
          "type": "boolean",
          "default": true,
          "description": "Specify whether TypeScript should be used for UI component."
        },
        "stencil.styleFormat": {
          "type": "string",
          "default": "css",
          "enum": [
            "css",
            "scss",
            "less"
          ],
          "description": "Specify the style format for UI component."
        },
        "stencil.useCssModules": {
          "type": "boolean",
          "default": true,
          "description": "Specify whether to use CSS Modules for importing styles for UI component."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9"
  }
}